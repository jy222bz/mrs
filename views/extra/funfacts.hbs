{{> header}}
<main id="main" class="main">
   {{#if mutual.length}} <h1 class="headline">Fun Facts are based on the information that is provided by the users:
   </h1>
   <table class="table table-dark table-striped">
      <thead>
         <tr>
            <th scope="col">Director Name</th>
            <th scope="col">Age</th>
            <th scope="col">Origin</th>
            <th scope="col">Movie Name</th>
            <th scope="col">Series Name</th>
         </tr>
      </thead>
      <tbody>
         {{#each mutual}}
         <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.age}}</td>
            <td>{{this.origin}}</td>
            <td>{{this.name1}}</td>
            <td>{{this.name2}}</td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{/if}}
   {{#if joins.length}} <h1 class="headline">The combinations of a set of two items; one Movie and one Series: </h1>
   <table class="table table-dark table-striped">
      <thead>
         <tr>
            <th scope="col">Combination: Movie Name & Series Name</th>
            <th scope="col">The inital price of the Movie in USD</th>
            <th scope="col">The inital price of the Series in USD</th>
            <th scope="col">Actual Price for both items in USD</th>
         </tr>
      </thead>
      <tbody>
         {{#each joins}}
         <tr>
            <td>{{this.name1}} & {{this.name2}}</td>
            <td>{{this.price1}}</td>
            <td> {{this.price2}} </td>
            <td>{{this.total}} </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{/if}}
   {{#if innerJoins.length}} <h1 class="headline">Inner Joins: </h1>
   <table class="table table-dark table-striped">
      <thead>
         <tr>
            <th scope="col">Movie Name </th>
            <th scope="col">Director</th>
            <th scope="col">Category</th>
            <th scope="col">Rating</th>
            <th scope="col">Gross</th>
            <th scope="col">Gross Worldwide</th>
         </tr>
      </thead>
      <tbody>
         {{#each innerJoins}}
         <tr>
            <td>{{this.name}} </td>
            <td>{{this.director}}</td>
            <td> {{this.category}} </td>
            <td>{{this.rating}} </td>
            <td>{{this.gross}} </td>
            <td>{{this.grossWorldwide}} </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{/if}}
   {{#if cheap.length}} <h1 class="headline">The Result of Aggregations: </h1>
   <table class="table table-dark table-striped">
      <thead>
         <tr>
            <th scope="col">The Cheapest Movie </th>
            <th scope="col">Movie Price</th>
            <th scope="col">The Cheapest Series</th>
            <th scope="col">Series Price</th>
         </tr>
      </thead>
      <tbody>
         {{#each cheap}}
         <tr>
            <td>{{this.mName}} </td>
            <td>{{this.mPrice}}</td>
            <td> {{this.sName}} </td>
            <td>{{this.sPrice}} </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{/if}}

   {{#if expensive.length}} <h1 class="headline">The Result of Aggregations: </h1>
   <table class="table table-dark table-striped">
      <thead>
         <tr>
            <th scope="col">The Most Expensive Movie </th>
            <th scope="col">Movie Price</th>
            <th scope="col">The Most Expensive Series</th>
            <th scope="col">Series Price</th>
         </tr>
      </thead>
      <tbody>
         {{#each expensive}}
         <tr>
            <td>{{this.mName}} </td>
            <td>{{this.mPrice}}</td>
            <td> {{this.sName}} </td>
            <td>{{this.sPrice}} </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{/if}}
</main>