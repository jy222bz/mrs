{{> header}}
<main class="sec2" class="table-responsive">
      <section class="sec3">
            <h2>Series Information:</h2>
            <form action="/serieses/add-series" method="POST">
                  <label for="director">Select Director:</label><br>
                  <select name="director" id="director" required>
                        {{#if rows.length}}
                        {{#each rows}}
                        <option value="{{this.fullName}}|{{this.id}}">{{this.fullName}}</option>
                        {{/each}}
                        {{/if}}
                  </select>
                  <br>
                  <label for="category">Select Category:</label><br>
                  <select name="category" id="category" required>
                        <option value="Action">Action</option>
                        <option value="Crime">Crime</option>
                        <option value="Drama">Drama</option>
                        <option value="Adventure">Adventure</option>
                        <option value="War">War</option>
                        <option value="Mystery">Mystery</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Horror">Horror</option>
                  </select>
                  <br> <br>
                  <label for="name">Series Name:</label><br>
                  <input type="title" id="name" name="name" placeholder="Series Name" required><br>
                  <label for="year">Year:</label><br>
                  <input type="number" min="1920" max="2021" id="year" name="year" placeholder="Year" required><br>
                  <label for="seasons">Number of Season[s]:</label><br>
                  <input type="number" min="1" id="seasons" name="seasons" placeholder="Number of Seasons" required><br>
                  <label for="episodes">Number of Episode[s]:</label><br>
                  <input type="number" min="1" id="episodes" name="episodes" placeholder="Number of Episodes" required><br>
                  <label for="price"> Price in USD:</label><br>
                  <input type="number" min="1" id="price" name="price" placeholder="Price in USD" required><br>
                  <label for="ageLimit"> Age Limit:</label><br>
                  <input type="number" min="1" id="ageLimit" name="ageLimit" placeholder="Age imit" required><br>
                  <label for="origin">Origin:</label><br>
                  <input type="title" id="origin" name="origin" placeholder="Origin" required><br>
                  <label for="language">Language:</label><br>
                  <input type="title" id="language" name="language" placeholder="Language" required><br>
                  <br>
                  <label for="note"> Note:</label><br>
                  <textarea id="note" name="note" rows="12" cols="50" placeholder="Write the note here...."></textarea>
                  <input type="submit" value="Add"><br>
            </form>
      </section>
      {{#if message.length}}
      <div class="div2">
            <p class="line"> {{message}} </p>
      </div>
      {{/if}}
</main>