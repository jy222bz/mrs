<body>
 <main class="sec2">
  <section class="sec3">
   <h2>Sign-in:</h2><br>
   <form action="/login" method="POST">
    <label for="email">E-mail:</label><br>
    <input type="email" id="email" name="email" placeholder="name@domain.com" required><br><br>
    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password" placeholder="password" autocomplete="on" required><br>
    <input type="hidden" name="_csrf" value="{{ csrfTocken }}"><br>
    <input type="submit" value="Sign"><br>
   </form>
  </section>
  {{#if message.length}}
  <div class="div2">
   <p class="line"> {{message}} </p>
  </div>
  {{/if}}
 </main>

