{{> header}}
<main class="sec2" class="table-responsive">
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <button type="button" id="addMovie" class="btn btn-dark" style="width: 100px">
      <i class="bi bi-plus-lg"></i>
    </button>
  </div>
  <div class="table-responsive">

    {{#if rows.length}}
    <br> <br>
    <h1 class="headline">Movies: </h1>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Director</th>
          <th scope="col">Year</th>
          <th scope="col">Price in USD:</th>
          <th scope="col">Age Limit:</th>
          <th scope="col">Length in Minutes:</th>
          <th scope="col">Language:</th>
          <th scope="col">Origin:</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
        <tr>
          <td> {{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.director}}</td>
          <td>{{this.year}}</td>
          <td>{{this.price}}</td>
          <td>{{this.ageLimit}}</td>
          <td>{{this.length}}</td>
          <td>{{this.language}}</td>
          <td>{{this.origin}}</td>
          <td> <a href="/movies/{{this.id}}"><i class="bi bi-pencil"></i></a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <div class="container-fluid pt-5 pb-5">
      <h1 class="headline">No Data In The Database </h1>
    </div>
    {{/if}}

  </div>
  </main>