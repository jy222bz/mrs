{{> header2}}
<main class="sec2" class="table-responsive">
 <div class="d-grid gap-2 d-md-flex justify-content-md-end">

 </div>
 {{#if rows.length}}
 <br> <br>
 <h1 class="headline">MRS: Reviews: </h1>
 <table class="table table-dark table-striped">
  <thead>
   <tr>
    <th scope="col">Name</th>
    <th scope="col">Rating</th>
    <th scope="col">Storyline:</th>
    <th scope="col">Goofs:</th>
    <th scope="col">Trivia:</th>
    <th scope="col">Quotes:</th>
    <th scope="col">Number of Award[s]:</th>
    <th scope="col">Gross worldwide:</th>
    <th scope="col">Reviews:</th>
   </tr>
  </thead>
  <tbody>
   {{#each rows}}
   <tr>
    <td> {{this.name}}</a></td>
    <td>{{this.rating}}</td>
    <td>{{this.story}}</td>
    <td>{{this.goofs}}</td>
    <td>{{this.trivia}}</td>
    <td>{{this.quotes}}</td>
    <td>{{this.awards}}</td>
    <td>{{this.gross}}</td>
    <td>{{this.reviews}}</td>
   </tr>
   {{/each}}
  </tbody>
 </table>
 {{else}}
 <div class="container-fluid pt-5 pb-5">
  <h1 class="headline">No Data In The Database </h1>
 </div>
 {{/if}}
 </div>
</main>